                        Placeholder="Select item..." Font="DefaultFont" MaxVisibleItems="4"
                        Padding="16" ArrowWidth="64" ArrowSize="24" TrianglePixelSize="4" ScrollbarWidth="12"
                        Background="50,55,65" TextColor="White">
                <Border Thickness="4" Color="Gray"/>
                <FocusedBorder Thickness="4" Color="CornflowerBlue"/>
                <ListBorder Thickness="4" Color="Gray"/>
              </Dropdown>
            </Children>
          </Panel>
