          <Label Name="p1_section_sliders" Text="Sliders &amp; Dropdowns" Font="DefaultFont" Position="630,0,p1_section_buttons" Color="Gray"/>
          <Panel Name="p1_panel_sliders" Position="0,56,p1_section_sliders" Size="570,810" Background="40,45,55">
            <Border Thickness="4" Color="Gray"/>
            <Children>
              <Label Name="p1_slider_desc" Text="Slider" Font="DefaultFont" Position="20,12,p1_panel_sliders" Color="DarkGray"/>
              <Slider Name="p1_slider" Position="0,32,p1_slider_desc" Size="470,64"
                      Min="0" Max="100" Value="42" ShowValue="true" Font="DefaultFont"
                      TrackFillColor="CornflowerBlue" TrackHeight="24" ThumbSize="36,44">
                <TrackBorder Thickness="4" Color="Gray"/>
                <ThumbBorder Thickness="4" Color="40,40,40"/>
              </Slider>

              <Label Name="p1_slider2_desc" Text="Slider (alternate style)" Font="DefaultFont" Position="0,56,p1_slider" Color="DarkGray"/>
              <Slider Name="p1_slider2" Position="0,36,p1_slider2_desc" Size="470,64"
                      Min="0" Max="255" Value="128" ShowValue="true" Font="DefaultFont"
                      TrackFillColor="Orange" TrackHeight="24" ThumbSize="36,44">
                <TrackBorder Thickness="4" Color="Gray"/>
                <ThumbBorder Thickness="4" Color="40,40,40"/>
