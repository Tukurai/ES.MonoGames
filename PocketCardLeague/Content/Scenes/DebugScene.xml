              <Checkbox Name="p1_toggle_atk" Position="0,48,p1_sprcb_desc" Scale="4,4" IsChecked="false" UncheckedSprite="Buttons.Toggle_atk_off" CheckedSprite="Buttons.Toggle_atk_on"/>
              <Checkbox Name="p1_toggle_def" Position="80,0,p1_toggle_atk" Scale="4,4" IsChecked="true" UncheckedSprite="Buttons.Toggle_def_off" CheckedSprite="Buttons.Toggle_def_on"/>
