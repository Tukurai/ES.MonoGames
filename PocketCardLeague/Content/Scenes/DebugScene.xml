              <Label Name="p1_cb_desc" Text="Checkbox" Font="DefaultFont" Position="0,64,p1_sprite_button_1" Color="DarkGray"/>
              <Checkbox Name="p1_cb_checked" Position="0,48,p1_cb_desc" Label="Checked" Font="DefaultFont" LabelColor="White"
