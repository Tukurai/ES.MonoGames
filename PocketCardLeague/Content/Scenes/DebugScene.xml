<?xml version="1.0" encoding="utf-8"?>
<Scene BackgroundColor="20,20,30">

  <!-- Page header - updated dynamically in code -->
  <Label Name="page_header" Text="Debug - Page 1/2" Font="HeaderFont"
         X="0" Y="24" Center="true" MaxWidth="2048">
    <Border Thickness="4" Color="Black"/>
  </Label>

  <!-- SubSceneContainer for all debug pages -->
  <SubSceneContainer Name="page_container" X="0" Y="0" Width="2048" Height="1152" Background="Transparent">
    <SubScenes>

      <!-- Page 1: Text & Labels -->
      <SubScene Name="page_1" Background="Transparent">
        <Children>
          <Label Name="p1_section_labels" Text="Text &amp; Labels &amp; Sprites" Font="DefaultFont" X="96" Y="160" Color="Gray"/>
          <Panel Name="p1_panel_labels" RelativeTo="p1_section_labels" OffsetX="0" OffsetY="56" Width="570" Height="810" Background="40,45,55">
            <Border Thickness="4" Color="Gray"/>
            <Children>
              <Label Name="p1_label" Text="Regular SpriteFont Label" Font="DefaultFont" RelativeTo="p1_panel_labels" OffsetX="20" OffsetY="12" Color="White"/>
              <Label Name="p1_left_desc" Text="PixelLabel (Pixelfont, Left)" Font="DefaultFont" RelativeTo="p1_label" OffsetX="0" OffsetY="40" Color="DarkGray"/>
              <PixelLabel Name="p1_pixel_left" Atlas="Pixelfont" Text="Left aligned pixel text!" RelativeTo="p1_left_desc" OffsetX="0" OffsetY="40" CharScale="4,4" Spacing="0" Tint="White"/>
              <Label Name="p1_center_desc" Text="PixelLabel (Pixelfont, Center)" Font="DefaultFont" RelativeTo="p1_pixel_left" OffsetX="0" OffsetY="40" Color="DarkGray"/>
              <PixelLabel Name="p1_pixel_center" Atlas="Pixelfont" Text="Centered pixel text!" RelativeTo="p1_center_desc" OffsetX="0" OffsetY="40" CharScale="4,4" Spacing="0" Alignment="Center" MaxWidth="530" Tint="CornflowerBlue"/>
              <Label Name="p1_right_desc" Text="PixelLabel (Pixelfont, Right)" Font="DefaultFont" RelativeTo="p1_pixel_center" OffsetX="0" OffsetY="40" Color="DarkGray"/>
              <PixelLabel Name="p1_pixel_right" Atlas="Pixelfont" Text="Right aligned pixel text!" RelativeTo="p1_right_desc" OffsetX="0" OffsetY="40" CharScale="4,4" Spacing="0" Alignment="Right" MaxWidth="530" Tint="LimeGreen"/>
              <Label Name="p1_score_desc" Text="PixelLabel (Scoreboard)" Font="DefaultFont" RelativeTo="p1_pixel_right" OffsetX="0" OffsetY="40" Color="DarkGray"/>
              <PixelLabel Name="p1_score" Atlas="Scoreboard" Text="12/34" RelativeTo="p1_score_desc" OffsetX="0" OffsetY="40" CharScale="6,6" Spacing="0" Tint="Gold"/>

              <Label Name="p1_sprite_desc" Text="Sprite (static)" Font="DefaultFont" RelativeTo="p1_score" OffsetX="0" OffsetY="84" Color="DarkGray"/>
              <Sprite Name="p1_sprite_1" RelativeTo="p1_sprite_desc" OffsetX="40" OffsetY="56" Scale="4,4" Texture="Pokemon.0025_000_mf_n_00000000_n"/>
              <Sprite Name="p1_sprite_2" RelativeTo="p1_sprite_desc" OffsetX="160" OffsetY="56" Scale="4,4" Texture="Pokemon.0150_000_mf_n_00000000_n"/>

              <Label Name="p1_anim_desc" Text="Sprite (Animated)" Font="DefaultFont" RelativeTo="p1_sprite_desc" OffsetX="280" OffsetY="0" Color="DarkGray"/>
              <AnimatedSprite Name="p1_anim_1" RelativeTo="p1_sprite_desc" OffsetX="180" OffsetY="-60" Scale="4,4" FrameDelayMs="500" Loop="true" AutoStart="true"
                              Frames="Pokemon.0001_000_mf_n_00000000_n,Pokemon.0004_000_mf_n_00000000_n,Pokemon.0007_000_mf_n_00000000_n,Pokemon.0025_000_mf_n_00000000_n"/>
              <AnimatedSprite Name="p1_anim_2" RelativeTo="p1_sprite_desc" OffsetX="300" OffsetY="-60" Scale="4,4" FrameDelayMs="500" Loop="true" AutoStart="true"
                              Frames="Pokemon.0003_000_mf_n_00000000_n,Pokemon.0006_000_mf_n_00000000_n,Pokemon.0009_000_mf_n_00000000_n,Pokemon.0026_000_mf_n_00000000_n"/>
            </Children>
          </Panel>

          <Label Name="p1_section_buttons" Text="Buttons &amp; Input" Font="DefaultFont" RelativeTo="p1_section_labels" OffsetX="630" OffsetY="0" Color="Gray"/>
          <Panel Name="p1_panel_buttons" RelativeTo="p1_section_buttons" OffsetX="0" OffsetY="56" Width="570" Height="810" Background="40,45,55">
            <Border Thickness="4" Color="Gray"/>
            <Children>
              <Label Name="p1_btn_desc" Text="Button" Font="DefaultFont" RelativeTo="p1_panel_buttons" OffsetX="20" OffsetY="12" Color="DarkGray"/>
              <Button Name="p1_button" Text="Click Me" Font="DefaultFont"  RelativeTo="p1_btn_desc" OffsetX="0" OffsetY="44" Width="530" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>

              <Label Name="p1_sprbtn_desc" Text="SpriteButton" Font="DefaultFont" RelativeTo="p1_button" OffsetX="0" OffsetY="72" Color="DarkGray"/>
              <SpriteButton Name="p1_sprite_button_1" RelativeTo="p1_sprbtn_desc" OffsetX="0" OffsetY="48" Scale="4,4" NormalSprite="Arrows.Arrow_right" HoveredSprite="Arrows.Arrow_right_hover" PressedSprite="Arrows.Arrow_right_active"/>
              <SpriteButton Name="p1_sprite_button_2" RelativeTo="p1_sprite_button_1" OffsetX="48" OffsetY="0" Scale="4,4" NormalSprite="Arrows.Arrow_left" HoveredSprite="Arrows.Arrow_left_hover" PressedSprite="Arrows.Arrow_left_active"/>
              <SpriteButton Name="p1_sprite_button_3" RelativeTo="p1_sprite_button_2" OffsetX="48" OffsetY="12" Scale="4,4" NormalSprite="Arrows.Arrow_up" HoveredSprite="Arrows.Arrow_up_hover" PressedSprite="Arrows.Arrow_up_active"/>
              <SpriteButton Name="p1_sprite_button_4" RelativeTo="p1_sprite_button_3" OffsetX="72" OffsetY="0" Scale="4,4" NormalSprite="Arrows.Arrow_down" HoveredSprite="Arrows.Arrow_down_hover" PressedSprite="Arrows.Arrow_down_active"/>

              <Label Name="p1_cb_desc" Text="Checkbox" Font="DefaultFont" RelativeTo="p1_sprite_button_1" OffsetX="0" OffsetY="64" Color="DarkGray"/>
              <Checkbox Name="p1_cb_checked" RelativeTo="p1_cb_desc" OffsetX="0" OffsetY="48" Label="Checked" Font="DefaultFont" LabelColor="White"
                        IsChecked="true" BoxSize="40" BoxBackground="60,60,60" BoxBorderColor="Gray" CheckmarkColor="LimeGreen"
                        BoxBorderThickness="4" LabelSpacing="24"/>
              <Checkbox Name="p1_cb_unchecked" RelativeTo="p1_cb_desc" OffsetX="250" OffsetY="48" Label="Unchecked" Font="DefaultFont" LabelColor="White"
                        IsChecked="false" BoxSize="40" BoxBackground="60,60,60" BoxBorderColor="Gray" CheckmarkColor="LimeGreen"
                        BoxBorderThickness="4" LabelSpacing="24"/>

              <Label Name="p1_sprcb_desc" Text="Sprite Checkbox (toggle)" Font="DefaultFont" RelativeTo="p1_cb_desc" OffsetX="0" OffsetY="100" Color="DarkGray"/>
              <Checkbox Name="p1_toggle_atk" RelativeTo="p1_sprcb_desc" OffsetX="0" OffsetY="48" Scale="4,4" IsChecked="false" UncheckedSprite="Buttons.Toggle_atk_off" CheckedSprite="Buttons.Toggle_atk_on"/>
              <Checkbox Name="p1_toggle_def" RelativeTo="p1_toggle_atk" OffsetX="80" OffsetY="0" Scale="4,4" IsChecked="true" UncheckedSprite="Buttons.Toggle_def_off" CheckedSprite="Buttons.Toggle_def_on"/>
              <Checkbox Name="p1_toggle_dex" RelativeTo="p1_toggle_def" OffsetX="80" OffsetY="0" Scale="4,4" IsChecked="false" UncheckedSprite="Buttons.Toggle_dex_off" CheckedSprite="Buttons.Toggle_dex_on"/>
              <Checkbox Name="p1_toggle_innate" RelativeTo="p1_toggle_dex" OffsetX="80" OffsetY="0" Scale="4,4" IsChecked="true" UncheckedSprite="Buttons.Toggle_innate_off" CheckedSprite="Buttons.Toggle_innate_on"/>
              <Checkbox Name="p1_toggle_level" RelativeTo="p1_toggle_innate" OffsetX="80" OffsetY="0" Scale="4,4" IsChecked="false" UncheckedSprite="Buttons.Toggle_level_off" CheckedSprite="Buttons.Toggle_level_on"/>

              <Label Name="p1_input_desc" Text="InputField" Font="DefaultFont" RelativeTo="p1_sprcb_desc" OffsetX="0" OffsetY="120" Color="DarkGray"/>
              <InputField Name="p1_input" RelativeTo="p1_input_desc" OffsetX="0" OffsetY="48" Width="530" Height="64"
                          Placeholder="Type something..." Font="DefaultFont"
                          Background="40,40,40" TextColor="White" PlaceholderColor="DarkGray"
                          Padding="12" CursorWidth="4">
                <Border Thickness="4" Color="Gray"/>
                <FocusedBorder Thickness="8" Color="CornflowerBlue"/>
              </InputField>
            </Children>
          </Panel>

          <Label Name="p1_section_sliders" Text="Sliders &amp; Dropdowns" Font="DefaultFont" RelativeTo="p1_section_buttons" OffsetX="630" OffsetY="0" Color="Gray"/>
          <Panel Name="p1_panel_sliders" RelativeTo="p1_section_sliders" OffsetX="0" OffsetY="56" Width="570" Height="810" Background="40,45,55">
            <Border Thickness="4" Color="Gray"/>
            <Children>
              <Label Name="p1_slider_desc" Text="Slider" Font="DefaultFont" RelativeTo="p1_panel_sliders" OffsetX="20" OffsetY="12" Color="DarkGray"/>
              <Slider Name="p1_slider" RelativeTo="p1_slider_desc" OffsetX="0" OffsetY="32" Width="470" Height="64"
                      Min="0" Max="100" Value="42" ShowValue="true" Font="DefaultFont"
                      TrackFillColor="CornflowerBlue" TrackHeight="24" ThumbWidth="36" ThumbHeight="44">
                <TrackBorder Thickness="4" Color="Gray"/>
                <ThumbBorder Thickness="4" Color="Black"/>
              </Slider>

              <Label Name="p1_slider2_desc" Text="Slider (alternate style)" Font="DefaultFont" RelativeTo="p1_slider" OffsetX="0" OffsetY="56" Color="DarkGray"/>
              <Slider Name="p1_slider2" RelativeTo="p1_slider2_desc" OffsetX="0" OffsetY="36" Width="470" Height="64"
                      Min="0" Max="255" Value="128" ShowValue="true" Font="DefaultFont"
                      TrackFillColor="Orange" TrackHeight="24" ThumbWidth="36" ThumbHeight="44">
                <TrackBorder Thickness="4" Color="Gray"/>
                <ThumbBorder Thickness="4" Color="Black"/>
              </Slider>

              <Label Name="p1_dd_desc" Text="Dropdown" Font="DefaultFont" RelativeTo="p1_slider2" OffsetX="0" OffsetY="56" Color="DarkGray"/>
              <Dropdown Name="p1_dropdown" RelativeTo="p1_dd_desc" OffsetX="0" OffsetY="52" Width="530" Height="64"
                        Items="Option A,Option B,Option C,Option D,Option E"
                        Placeholder="Select item..." Font="DefaultFont" MaxVisibleItems="4"
                        Padding="16" ArrowWidth="64" ArrowSize="24" TrianglePixelSize="4" ScrollbarWidth="12"
                        Background="50,55,65" TextColor="White">
                <Border Thickness="4" Color="Gray"/>
                <FocusedBorder Thickness="4" Color="CornflowerBlue"/>
                <ListBorder Thickness="4" Color="Gray"/>
              </Dropdown>
            </Children>
          </Panel>
        </Children>
      </SubScene>

      <!-- Page 2: Audio -->
      <SubScene Name="page_2" Background="Transparent">
        <Children>

          <Label Name="p2_section_music" Text="Music" Font="DefaultFont" X="96" Y="160" Color="Gray"/>
          <Panel Name="p2_panel_music" RelativeTo="p2_section_music" OffsetX="0" OffsetY="56" Width="570" Height="810" Background="40,45,55">
            <Border Thickness="4" Color="Gray"/>
            <Children>
              <Label Name="p2_button_desc" Text="Start or stop music:" Font="DefaultFont" RelativeTo="p2_panel_music" OffsetX="20" OffsetY="12" Color="DarkGray"/>
              <Button Name="p2_toggle" Text="Play Music" Font="DefaultFont" RelativeTo="p2_button_desc" OffsetX="0" OffsetY="44" Width="530" Height="64" Background="50,80,50" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>

              <Label Name="p2_track_desc" Text="Select a Track to play:" Font="DefaultFont" RelativeTo="p2_toggle" OffsetX="0" OffsetY="72" Color="DarkGray"/>
              <Dropdown Name="p2_track_dropdown" RelativeTo="p2_track_desc" OffsetX="0" OffsetY="48" Width="530" Height="64"
                        Items="ms_battle,ms_battle_2,ms_battle_3,ms_battle_4,ms_battle_intro,ms_defeat,ms_ending,ms_league,ms_main,ms_tutorial,ms_victory"
                        Placeholder="Select track..." Font="DefaultFont" MaxVisibleItems="5"
                        Padding="16" ArrowWidth="64" ArrowSize="24" TrianglePixelSize="4" ScrollbarWidth="12"
                        Background="50,55,65" TextColor="White">
                <Border Thickness="4" Color="Gray"/>
                <FocusedBorder Thickness="8" Color="CornflowerBlue"/>
                <ListBorder Thickness="4" Color="Gray"/>
              </Dropdown>

              <Label Name="p2_master_desc" Text="Master Volume:" Font="DefaultFont" RelativeTo="p2_track_dropdown" OffsetX="0" OffsetY="80" Color="DarkGray"/>
              <Slider Name="p2_master_slider" RelativeTo="p2_master_desc" OffsetX="0" OffsetY="32" Width="470" Height="64"
                      Min="0" Max="100" Value="100" ShowValue="true" Font="DefaultFont"
                      TrackFillColor="Gold" TrackHeight="24" ThumbWidth="36" ThumbHeight="44">
                <TrackBorder Thickness="4" Color="Gray"/>
                <ThumbBorder Thickness="4" Color="Black"/>
              </Slider>

              <Label Name="p2_music_desc" Text="Music Volume:" Font="DefaultFont" RelativeTo="p2_master_slider" OffsetX="0" OffsetY="56" Color="DarkGray"/>
              <Slider Name="p2_music_slider" RelativeTo="p2_music_desc" OffsetX="0" OffsetY="32" Width="470" Height="64"
                      Min="0" Max="100" Value="75" ShowValue="true" Font="DefaultFont"
                      TrackFillColor="CornflowerBlue" TrackHeight="24" ThumbWidth="36" ThumbHeight="44">
                <TrackBorder Thickness="4" Color="Gray"/>
                <ThumbBorder Thickness="4" Color="Black"/>
              </Slider>

              <Label Name="p2_sfx_desc" Text="SFX Volume:" Font="DefaultFont" RelativeTo="p2_music_slider" OffsetX="0" OffsetY="56" Color="DarkGray"/>
              <Slider Name="p2_sfx_slider" RelativeTo="p2_sfx_desc" OffsetX="0" OffsetY="32" Width="470" Height="64"
                      Min="0" Max="100" Value="75" ShowValue="true" Font="DefaultFont"
                      TrackFillColor="LimeGreen" TrackHeight="24" ThumbWidth="36" ThumbHeight="44">
                <TrackBorder Thickness="4" Color="Gray"/>
                <ThumbBorder Thickness="4" Color="Black"/>
              </Slider>
            </Children>
          </Panel>

          <Label Name="p2_section_effects" Text="Sound Effects" Font="DefaultFont" RelativeTo="p2_section_music" OffsetX="630" OffsetY="0" Color="Gray"/>
          <ScrollPanel Name="p2_panel_effects" RelativeTo="p2_section_effects" OffsetX="0" OffsetY="56" Width="570" Height="810"
                       ContentWidth="600" ContentHeight="1220" Background="40,45,55"
                       ScrollbarWidth="16" ScrollbarPadding="4" ScrollSpeed="60"
                       EnableHorizontalScroll="false">
            <Border Thickness="4" Color="Gray"/>
            <Children>
              <Label Name="p2_fx_desc" Text="Click to play effect:" Font="DefaultFont" RelativeTo="p2_panel_effects" OffsetX="20" OffsetY="12" Color="DarkGray"/>
              <Button Name="p2_fx_sn_card" Text="sn_card" Font="DefaultFont" RelativeTo="p2_fx_desc" OffsetX="0" OffsetY="44" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_click" Text="sn_click" Font="DefaultFont" RelativeTo="p2_fx_sn_card" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_click_2" Text="sn_click_2" Font="DefaultFont" RelativeTo="p2_fx_sn_click" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_coin" Text="sn_coin" Font="DefaultFont" RelativeTo="p2_fx_sn_click_2" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_enterview" Text="sn_enterview" Font="DefaultFont" RelativeTo="p2_fx_sn_coin" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_event" Text="sn_event" Font="DefaultFont" RelativeTo="p2_fx_sn_enterview" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_faint" Text="sn_faint" Font="DefaultFont" RelativeTo="p2_fx_sn_event" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_flipcard" Text="sn_flipcard" Font="DefaultFont" RelativeTo="p2_fx_sn_faint" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_hurt" Text="sn_hurt" Font="DefaultFont" RelativeTo="p2_fx_sn_flipcard" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_money" Text="sn_money" Font="DefaultFont" RelativeTo="p2_fx_sn_hurt" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_noise" Text="sn_noise" Font="DefaultFont" RelativeTo="p2_fx_sn_money" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_rare" Text="sn_rare" Font="DefaultFont" RelativeTo="p2_fx_sn_noise" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_rare_2" Text="sn_rare_2" Font="DefaultFont" RelativeTo="p2_fx_sn_rare" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_text" Text="sn_text" Font="DefaultFont" RelativeTo="p2_fx_sn_rare_2" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
              <Button Name="p2_fx_sn_upgrade" Text="sn_upgrade" Font="DefaultFont" RelativeTo="p2_fx_sn_text" OffsetX="0" OffsetY="76" Width="516" Height="64" Background="50,60,80" PressDepth="4">
                <Border Thickness="4" Color="Gray"/>
                <TextBorder Thickness="4" Color="Black"/>
              </Button>
            </Children>
          </ScrollPanel>
        </Children>
      </SubScene>

    </SubScenes>
  </SubSceneContainer>

  <!-- Navigation footer -->
  <Label Name="nav_footer" Text="&lt; &gt; Navigate Pages | CTRL +/- Scale | HOME to return"
         Font="DefaultFont" X="0" Y="1080" Center="true" MaxWidth="2048" Color="Gray"/>

</Scene>
