<?xml version="1.0" encoding="utf-8"?>

<Template>
  <Panel Name="card_panel" Size="180,260" Background="45,45,60,255">
    <Border Thickness="4" Color="80,80,100"/>
    <Children>
      <!-- Card image area - can hold a Sprite child if needed -->
      <Panel Name="card_image_panel" Position="10,10" Size="160,140" Background="30,30,45">
        <Border Thickness="2" Color="60,60,80"/>
      </Panel>

      <!-- Card title -->
      <Label Name="card_title" Text="Card Name" Font="HeaderFont"
             Position="10,158" Color="White">
        <Border Thickness="2" Color="Black"/>
      </Label>

      <!-- Card stats (optional - shows HP, attack, etc.) -->
      <Label Name="card_stats" Text="" Font="DefaultFont"
             Position="10,190" Color="200,200,100"/>

      <!-- Card description area -->
      <Label Name="card_description" Text="Card description goes here." Font="DefaultFont"
             Position="10,215" Color="180,180,180" MaxWidth="160"/>
    </Children>
  </Panel>
</Template>
